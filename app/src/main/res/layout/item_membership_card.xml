<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:square="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.chenl.widgets.scale.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/business_cover"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@color/mediumRed"/>

        </com.chenl.widgets.scale.SquareLayout>

        <com.chenl.widgets.scale.SquareLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            square:ProportionH="1"
            square:ProportionW="3"
            android:background="@android:color/white">
            <ImageView
                android:id="@+id/business_qr_code"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"/>
        </com.chenl.widgets.scale.SquareLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>